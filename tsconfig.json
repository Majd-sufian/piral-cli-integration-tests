{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "noLib": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "esnext"],
    "types": ["@types/jest", "jest-playwright-preset", "expect-playwright"]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
